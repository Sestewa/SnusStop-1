#:import sys sys


ScreenManager:
    LoginScreen:
    SignupScreen:
    HomeScreen:
    SettingScreen:




<LoginScreen>:
    name: 'Login'

    MDBoxLayout:
        orientation: "vertical"

    MDSwitch:
        pos_hint: {'center_x': .2, 'center_y': .5}
        widget_style: 'ios'


    MDBottomAppBar:
        MDToolbar:
            icon: "git"
            type: "bottom"
            mode: "end"
            on_action_button: app.change_screen('Settings', 'left')


    MDRoundFlatButton:
        pos_hint: {'center_x': .5, 'center_y': .5}
        text: 'Hello World!'
        on_release: app.change_screen('Home', 'left')

<HomeScreen>:
    name: 'Home'

    MDBoxLayout:
        orientation: "vertical"

    MDToolbar:
        title: "MDToolbar"
        top: root.top
        elevation: 5
        left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]

    MDNavigationDrawer:
        id: nav_drawer
        ContentNavigationDrawer:


<SettingScreen>:
    name: 'Settings'

    MDToolbar:
        title: "Settings"
        top: root.top
        left_action_items: [["arrow-left", lambda x: app.change_screen('Login','right')]]


    MDSwitch:
        pos_hint: {'center_x': .2, 'center_y': .85}
        widget_style: 'ios'

    MDSwitch:
        pos_hint: {'center_x': .2, 'center_y': .75}
        widget_style: 'ios'

    MDSwitch:
        pos_hint: {'center_x': .2, 'center_y': .55}
        widget_style: 'ios'


<ContentNavigationDrawer>:
    MDNavigationDrawer:
        id: nav_drawer
        ContentNavigationDrawer:

    ScrollView:

        MDList:



            OneLineListItem:
                text: "Screen 1"
                on_release:
                    nav_drawer.set_state('close')
                    app.change_screen('Settings', 'right')

            OneLineListItem:
                text: "Screen 2"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 2"
